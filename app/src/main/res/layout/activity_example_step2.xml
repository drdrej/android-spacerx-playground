<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.touchableheroes.drafts.spacerx.spacerx.examples.step2.Step2StartActivity">


    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/fragment"
        android:name="com.touchableheroes.drafts.spacerx.spacerx.examples.step2.GameItemFragment"

        android:layout_width="368dp"
        android:layout_height="495dp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp">
        <Button
            android:id="@+id/btn_add_game"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="add"
        />

        <Button
            android:id="@+id/input_btn_delete_all_games"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="clear"

            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
